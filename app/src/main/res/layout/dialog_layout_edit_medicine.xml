<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_styler_edit_medicine"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <requestFocus />


    <TextView
        android:id="@+id/heading_editMed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/actor"
        android:gravity="center"
        android:text="Edit"
        android:layout_marginTop="2dp"
        android:padding="10dp"
        android:textSize="20sp"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/name_editMed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/heading_editMed"
        android:padding="10dp"
        android:fontFamily="@font/actor"
        android:hint="Name"/>
    <EditText
        android:id="@+id/code_editMed"
        android:layout_below="@id/name_editMed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/actor"
        android:padding="10dp"
        android:hint="Code"/>
    <EditText
        android:id="@+id/cost_editMed"
        android:layout_below="@id/code_editMed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:fontFamily="@font/actor"
        android:hint="Cost"/>
    <EditText
        android:id="@+id/quantity_editMed"
        android:layout_below="@id/cost_editMed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:fontFamily="@font/actor"
        android:hint="Quantity"/>
    <EditText
        android:id="@+id/expirydate_editMed"
        android:layout_below="@id/quantity_editMed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:fontFamily="@font/actor"
        android:hint="Expiry date"/>
    <EditText
        android:id="@+id/shelf_editMed"
        android:layout_below="@id/expirydate_editMed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:fontFamily="@font/actor"
        android:hint="Code"/>
    <LinearLayout
        android:layout_below="@id/shelf_editMed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ok_editMed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:background="?attr/selectableItemBackground"
            android:fontFamily="@font/actor"
            android:text="OK"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/cancel_editMed"
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:fontFamily="@font/actor"
            android:text="CANCEL"
            android:textColor="@color/colorAccent"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>